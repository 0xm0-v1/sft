{
  "name": "sft",
  "version": "1.0.0",
  "private": true,
  "description": "TFT Builder with Tailwind CSS v4",
  "scripts": {
    "dev:css": "npx @tailwindcss/cli -i ./static/css/main.css -o ./static/dist/app.css --watch",
    "build:css": "npx @tailwindcss/cli -i ./static/css/main.css -o ./static/dist/app.css --minify",
    "dev:js": "node scripts/build-assets.js --watch",
    "build:js": "node scripts/build-assets.js --prod",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:js\"",
    "build": "npm run build:css && npm run build:js",
    "convert:webp": "node scripts/convert-images-webp.js"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "esbuild": "^0.27.0",
    "sharp": "^0.33.5"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "@tailwindcss/cli": "^4.1.17",
    "tailwindcss": "^4.1.17"
  }
}
